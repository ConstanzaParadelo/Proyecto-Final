<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">Titulo</label>
                    <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Agregar Titulo">
                </div>
                <div class="mb-3">
                    <label for="formGroupExampleInput2" class="form-label">Subtitulo</label>
                    <input type="text" class="form-control" id="subtitulo" name="subtitulo"
                        placeholder="Agregar Subtitulo">
                </div>
                                <div class="mb-3">
                    <label for="formGroupExampleInput2" class="form-label">Imagen</label>
                    <input type="file"  class="form-control"  id="imagen" name="imagen"
                       >
                </div>

                <div class="mb-3">
                    <label for="formGroupExampleInput2" class="form-label">Cuerpo</label>
                    <input type="text" class="form-control" id="cuerpo" name="cuerpo" placeholder="Agregar Cuerpo">
                </div>
                <button type="submit" class="btn btn-success">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}

        </div>
    </div>
</div>

